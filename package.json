{
  "name": "aion-visualization",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "python3 -m http.server 3000 || python -m http.server 3000",
    "serve": "python3 -m http.server 3000 || python -m http.server 3000",
    "test": "jest --passWithNoTests",
    "test:morning": "./phase6-morning-testing.sh",
    "test:afternoon": "./phase6-afternoon-testing.sh",
    "test:full": "npm run test:morning && npm run test:afternoon",
    "test:smoke": "./scripts/run-tests.sh smoke",
    "test:comprehensive": "./scripts/run-tests.sh comprehensive",
    "test:checklist": "./scripts/run-tests.sh checklist",
    "test:all": "./scripts/run-tests.sh all",
    "test:accessibility": "node scripts/accessibility-runner.js",
    "test:before-deploy": "./scripts/test-before-deploy.sh",
    "migrate-paths": "node scripts/migrate-paths.js",
    "quick-fix": "node scripts/quick-path-fix.js",
    "lint": "eslint 'assets/js/**/*.js' --ignore-pattern '**/*.min.js'",
    "claude:auto": "./claude-auto-manager.sh",
    "claude:review": "claude /review dir=.",
    "claude:fix": "claude /fix",
    "deploy": "echo 'Auto-deployed via GitHub Pages'",
    "deploy:vercel": "vercel --prod",
    "optimize": "node optimize-bundle.js",
    "audit": "node src/performance-audit.js",
    "visual-test": "node src/visual-testing.js",
    "pre-deploy": "npm run test:checklist && npm run optimize",
    "perf:lighthouse": "lhci autorun --config=./lighthouserc.json",
    "perf:bundle-delta": "node scripts/performance/check-bundle-size-delta.js",
    "ci:chapter-shell": "node scripts/ci/ensure-chapter-shell.mjs",
    "validate:aion-core": "node scripts/validate-aion-core.js",
    "validate:consistency": "npm run validate:aion-core && node scripts/validate-aion-graph.js",
    "lint:relation-taxonomy": "node scripts/consistency/check-relation-taxonomy.js",
    "lint:styles": "stylelint 'src/styles/**/*.css' 'src/chapter1.html' 'src/chapter2.html' 'src/visualizations/chapters/chapter-4-fish/chapter-4-enhanced.html' --custom-syntax postcss-html"
  },
  "devDependencies": {
    "@lhci/cli": "^0.13.0",
    "@playwright/test": "^1.52.0",
    "@types/three": "^0.160.0",
    "axios": "^1.6.7",
    "babel-jest": "^30.0.0-beta.3",
    "eslint": "^8.56.0",
    "eslint-config-airbnb": "^19.0.4",
    "glob": "^10.4.5",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.2.0",
    "jest-html-reporters": "^3.1.7",
    "lighthouse": "^12.6.1",
    "lighthouse-ci": "^1.13.1",
    "playwright": "^1.42.1",
    "prettier": "^3.2.4",
    "puppeteer": "^24.10.0",
    "tesseract.js": "^5.0.4",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0",
    "webpack-bundle-analyzer": "^4.10.1",
    "ajv": "^8.17.1",
    "stylelint": "^16.15.0",
    "stylelint-config-standard": "^36.0.1",
    "postcss-html": "^1.7.0"
  },
  "dependencies": {
    "d3": "^7.8.5",
    "gsap": "^3.12.4",
    "matter-js": "^0.19.0",
    "three": "^0.160.0"
  }
}
